{
  "manifest_version": 2,
  "name": "Stylizer",
  "description": "Give websites user-defined CSS's.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },  
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" }
}
